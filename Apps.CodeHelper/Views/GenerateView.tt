@using Apps.Common;
@using Apps.Locale;
@using Apps.Models.Sys;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index_Layout.cshtml";

    List<permModel> perm = (List<permModel>)ViewBag.Perm;
    if (perm == null)
    {
        perm = new List<permModel>();
    }
}
<div class="mvctool">
    <input id="txtQuery" type="text" class="searchText" />
    @Html.ToolButton("btnQuery", "icon-search", Resource.Query, perm, "Query", true)
    @Html.ToolButton("btnCreate", "icon-add", Resource.Create, perm, "Create", true)
    @Html.ToolButton("btnEdit", "icon-edit", Resource.Edit, perm, "Edit", true)
    @Html.ToolButton("btnDetails", "icon-details", Resource.Detail, perm, "Details", true)
    @Html.ToolButton("btnDelete", "icon-remove", Resource.Delete, perm, "Delete", true)
    @Html.ToolButton("btnAllot", "icon-share", Resource.Allot, perm, "Allot", true)
</div>
<div id="modalwindow" class="easyui-window" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
<table id="List"></table>
<script type="text/javascript">
